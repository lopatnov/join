{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "./dist",
    "rootDir": "./src",
    "module": "ES2020",
    "outDir": "./dist",
    "target": "ES2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
